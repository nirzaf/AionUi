{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Electron Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "outputCapture": "std",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Electron Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src/renderer",
      "timeout": 30000
    },
    {
      "name": "Debug Electron (Main + Renderer)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "outputCapture": "std",
      "env": {
        "NODE_ENV": "development",
        "ELECTRON_ENABLE_LOGGING": "true"
      },
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Debug Electron (All Processes)",
      "configurations": ["Debug Electron Main Process", "Debug Electron Renderer Process"]
    }
  ]
}
